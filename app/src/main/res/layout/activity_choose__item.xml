<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kareemkanaan.cardview2.Choose_Item">

    <Button
        android:text="Microwave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/choose_item_3"
        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimary"
        android:minWidth="110dip"
        android:minHeight="110dip"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:includeFontPadding="false"
        android:layout_alignBaseline="@+id/choose_item_2"
        android:layout_alignBottom="@+id/choose_item_2"
        android:layout_alignStart="@+id/choose_item_5" />

    <Button
        android:text="Stove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/choose_item_2"
        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimary"
        android:minWidth="110dip"
        android:minHeight="110dip"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:includeFontPadding="false"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/choose_item_1"
        android:layout_alignStart="@+id/choose_all" />

    <Button
        android:text="Washer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/choose_item_4"
        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimary"
        android:minWidth="110dip"
        android:minHeight="110dip"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:includeFontPadding="false"
        android:layout_below="@+id/choose_item_2"
        android:layout_alignStart="@+id/choose_item_2"
        android:layout_marginTop="30dp" />

    <Button
        android:text="refrigerator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/choose_item_1"
        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimary"
        android:minWidth="110dip"
        android:minHeight="110dip"
        android:fontFamily="sans-serif"
        android:textSize="14sp"
        android:includeFontPadding="false"
        android:layout_alignBaseline="@+id/choose_all"
        android:layout_alignBottom="@+id/choose_all"
        android:layout_alignStart="@+id/choose_item_3" />

    <Button
        android:text="TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/choose_item_5"
        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimary"
        android:minWidth="110dip"
        android:minHeight="110dip"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:includeFontPadding="false"
        android:layout_marginEnd="50dp"
        android:layout_alignBaseline="@+id/choose_item_4"
        android:layout_alignBottom="@+id/choose_item_4"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/choose_all"
        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimary"
        android:minWidth="110dip"
        android:minHeight="110dip"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:includeFontPadding="false"
        android:layout_marginStart="48dp"
        android:layout_marginTop="78dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>